{
  "name": "pikud-haoref-alerts",
  "displayName": "Pikud Haoref Emergency Alerts MCP + Sound Effects",
  "description": "Real-time Israeli emergency alerts in VS Code",
  "version": "1.3.0",
  "publisher": "leon-melamud",
  "author": "Leon Melamud",
  "icon": "Pakar.png",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:pikudHaorefAlerts"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pikudHaoref.startAlerts",
        "title": "Start Listening for Alerts",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.stopAlerts",
        "title": "Stop Listening for Alerts",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.testAlert",
        "title": "Send Test Alert",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.deleteAlert",
        "title": "Delete Alert",
        "icon": {
          "light": "./resources/light/delete.svg",
          "dark": "./resources/dark/delete.svg"
        }
      },
      {
        "command": "pikudHaoref.clearAllAlerts",
        "title": "Clear All Alerts",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.selectAlertSound",
        "title": "Select Alert Sound",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.selectAllClearSound",
        "title": "Select All Clear Sound",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.selectFilterAreas",
        "title": "Select Alert Areas Filter",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.toggleSound",
        "title": "Toggle Alert Sound",
        "category": "Pikud Haoref"
      },
      {
        "command": "pikudHaoref.removeFilterArea",
        "title": "Remove Area from Filter",
        "icon": {
          "light": "./resources/light/delete.svg",
          "dark": "./resources/dark/delete.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pikudHaoref",
          "title": "Pikud Haoref Alerts",
          "icon": "resources/siren.svg"
        }
      ]
    },
    "views": {
      "pikudHaoref": [
        {
          "id": "pikudHaorefAlerts",
          "name": "ðŸš¨ Emergency Alerts"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "pikudHaoref.deleteAlert",
          "when": "view == pikudHaorefAlerts && viewItem == alertItem",
          "group": "inline"
        },
        {
          "command": "pikudHaoref.removeFilterArea",
          "when": "view == pikudHaorefAlerts && viewItem == filterArea",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Pikud Haoref Alerts",
      "properties": {
        "pikudHaoref.apiUrl": {
          "type": "string",
          "default": "http://localhost:8002/api/alerts-stream",
          "description": "SSE endpoint URL"
        },
        "pikudHaoref.apiKey": {
          "type": "string",
          "default": "poha-test-key-2024-secure",
          "description": "API key for authentication"
        },
        "pikudHaoref.enableNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Enable desktop notifications for incoming alerts."
        },
        "pikudHaoref.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL of the Pikud Haoref FastAPI server (used for sending test alerts)"
        },
        "pikudHaoref.enableSound": {
          "type": "boolean",
          "default": true,
          "description": "Play a sound when a new alert is received."
        },
        "pikudHaoref.alertSound": {
          "type": "string",
          "default": "worms.mp3",
          "description": "MP3 file to play on emergency alerts. Place .mp3 files in the extension's sounds/ folder."
        },
        "pikudHaoref.allClearSound": {
          "type": "string",
          "default": "relax.mp3",
          "description": "MP3 file to play on All Clear / Safe to Exit alerts. Place .mp3 files in the extension's sounds/ folder."
        },
        "pikudHaoref.filterAreas": {
          "type": "array",
          "items": { "type": "number" },
          "default": [],
          "description": "Filter alerts by city IDs. Only matching alerts trigger notifications and sound. Empty = all alerts. Use the area filter picker to select cities."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.89.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "eventsource": "^2.0.2"
  }
}
